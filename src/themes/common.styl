@import '~flexboxgrid/dist/flexboxgrid.min.css';
@import url('//fonts.googleapis.com/css?family=Roboto:300,400,500');

body {
  margin: 0;
}

.mat-form-field.full-width {
  width: 100%;
}

.mat-list-item.active .mat-list-item-content {
  color: black !important;
}

img.icon {
  height: 26px;
  margin: 0 4px 3px 0;
}

icon-url(u) {
  display: inline-block;
  background: url(u) no-repeat top left;
  height: 20px;
  width: 20px;
  cursor: pointer;
}

span.icon-delete {
  icon-url: '/assets/delete.svg';
}

span.icon-add {
  icon-url: '/assets/plus.svg';
}
